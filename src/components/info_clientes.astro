<script>
  // @ts-nocheck
  // URL de tu Google Sheet publicado como CSV
  // Reemplaza esta URL con la tuya
  const SHEET_URL =
    "https://docs.google.com/spreadsheets/d/e/2PACX-1vQW9HE0pnzSsXfqoD9qXe28EMfT2D6AFhoM3T_83Z8ajhdKDgL86tE8cSRfTTTtuVVm8j1KZLrHefc_/pubhtml?gid=0&single=true";

  async function buscarDatos(identificacion, url) {
    const res = await fetch(`${url}&rand=${Date.now()}`, { cache: "no-store" });
    if (!res.ok) throw new Error(`HTTP ${res.status}`);

    const csv = await res.text();
    const lines = csv.trim().split("\n");
    const headers = lines[0].split(",").map((h) => h.trim().toLowerCase());

    // Índices de las columnas (solo 2 columnas: cedula/nit y equipo)
    const indices = {
      cedula: headers.findIndex((h) => h.includes("CEDULA / NIT")),
      equipo: headers.findIndex((h) => h.includes("EQUIPO")),
    };

    const id = identificacion.trim().toLowerCase();

    for (let i = 1; i < lines.length; i++) {
      const cells = lines[i]
        .split(",")
        .map((c) => c.trim().replace(/^"|"$/g, ""));
      const cedulaCelda = cells[indices.cedula]?.toLowerCase() || "";

      if (cedulaCelda === id) {
        return {
          cedula: cells[indices.cedula] || "N/A",
          equipo: cells[indices.equipo] || "N/A",
        };
      }
    }

    return null;
  }

  async function buscarDatosConReintentos(identificacion, url, intentos = 3) {
    for (let i = 0; i < intentos; i++) {
      try {
        const datos = await buscarDatos(identificacion, url);
        if (datos) return datos;
      } catch (e) {
        console.warn(`Intento ${i + 1} fallido:`, e);
      }
      await new Promise((r) => setTimeout(r, 800));
    }
    return null;
  }

  function obtenerClaseEstado(estado) {
    const estadoLower = estado.toLowerCase();
    if (estadoLower.includes("revision") || estadoLower.includes("revisión"))
      return "en-revision";
    if (
      estadoLower.includes("reparacion") ||
      estadoLower.includes("reparación")
    )
      return "en-reparacion";
    if (estadoLower.includes("listo")) return "listo";
    if (estadoLower.includes("entregado")) return "entregado";
    return "pendiente";
  }

  async function consultarEstado() {
    const identificacion = document.getElementById("identificacion").value;

    if (!identificacion) {
      alert("Por favor ingresa tu número de identificación.");
      return;
    }

    // Mostrar loading
    document.getElementById("loading").style.display = "flex";
    document.getElementById("resultado").style.display = "none";
    document.getElementById("mensaje-error").style.display = "none";

    const datos = await buscarDatosConReintentos(identificacion, SHEET_URL);

    // Ocultar loading
    document.getElementById("loading").style.display = "none";

    if (!datos) {
      document.getElementById("mensaje-error").style.display = "block";
      return;
    }

    // Llenar los datos (solo 2 campos)
    document.getElementById("info-cedula").textContent = datos.cedula;
    document.getElementById("info-equipo").textContent = datos.equipo;

    // Mostrar resultado
    document.getElementById("resultado").style.display = "block";
  }

  function limpiarConsulta() {
    document.getElementById("identificacion").value = "";
    document.getElementById("resultado").style.display = "none";
    document.getElementById("mensaje-error").style.display = "none";
    document.getElementById("loading").style.display = "none";
  }

  // Permitir consulta con Enter
  document
    .getElementById("identificacion")
    ?.addEventListener("keypress", function (e) {
      if (e.key === "Enter") {
        consultarEstado();
      }
    });

  window.consultarEstado = consultarEstado;
  window.limpiarConsulta = limpiarConsulta;
</script>
